<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="FunctionalTestSuite">

    <groups>
        <run>
            <include name="functional"></include>

        </run>
    </groups>

    <listeners>
        <listener class-name="utilities.ExtentReportsUtils"></listener>
    </listeners>


    <test name="Functional Tests">
        <parameter name="os" value="windows"></parameter>
        <parameter name="browser" value="chrome"></parameter>

        <classes>

            <class name="testCases.HRMS.Payroll.LeaveTest"/>
            <class name="testCases.HRMS.Payroll.LeaveResumptionTest"/>
            <class name="testCases.HRMS.SelfService.LeaveCancellationTest"/>
            <class name="testCases.HRMS.Global.EventsTest"/>
            <class name="testCases.HRMS.SelfService.MyApprovalTest"/>
            <class name="testCases.HRMS.Payroll.OvertimeTest"/>

        </classes>
    </test>


</suite>