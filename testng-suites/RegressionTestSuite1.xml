<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="RegressionTestSuite">

    <groups>
        <run>
            <include name="regression"></include>
            <include name="datadriven"></include>
        </run>
    </groups>

    <listeners>
        <listener class-name="utilities.ExtentReportsUtils"></listener>
        <listener class-name="listeners.Listeners"></listener>
    </listeners>


    <test name="Regression Tests">
        <parameter name="os" value="windows"></parameter>
        <parameter name="browser" value="chrome"></parameter>

        <classes>

            <!-- Attendance -->
            <class name="testCases.HRMS.Attendance.AttendanceTest"/>


            <!-- Performance-->
            <class name="testCases.HRMS.Performance.PerformanceTest"/>


            <!-- Succession Planning-->
            <class name="testCases.HRMS.SuccessionPlanning.CreateSuccessionPlanTest"/>

            
            <!-- Global -->
            <!--<class name="testCases.HRMS.Global.BrokenLinksTest"/>-->

            <!-- Flaky Test -->


        </classes>
    </test>


</suite>